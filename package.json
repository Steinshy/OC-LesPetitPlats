{
  "name": "lespetitplats",
  "version": "1.0.0",
  "private": true,
  "description": "Application web de recettes faciles et d√©licieuses",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest --coverage && vite build --mode analyze",
    "test:ui": "vitest --ui",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "lint:js": "eslint . --ext js --ignore-pattern 'dist/**' --ignore-pattern 'coverage/**' --ignore-pattern 'api/data.js'",
    "lint:css": "stylelint '**/*.css' --ignore-pattern '**/*.min.css' --ignore-pattern 'dist/**' --ignore-pattern 'coverage/**'",
    "lint:html": "html-validate 'index.html' 'src/**/*.html' 'public/**/*.html'",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore coverage",
    "lint:fix": "eslint . --ext js --fix --ignore-pattern 'dist/**' --ignore-pattern 'coverage/**' --ignore-pattern 'api/data.js'",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "optimize:images": "node scripts/optimizeImages.js"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "lru-cache": "^11.2.2",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.7",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^1.0.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^16.4.0",
    "html-validate": "^9.0.0",
    "jsdom": "^27.0.1",
    "lightningcss": "^1.27.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.33.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "terser": "^5.36.0",
    "vite": "^7.1.7",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-linter": "^3.1.0",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-webfont-dl": "^3.11.1",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "source-map": "^0.7.6",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.5"
  }
}
